<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context=".activity.LogoutActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:id="@+id/layout_header"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:scaleType="fitXY"
            android:layout_marginLeft="14dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="设备"
            android:textColor="#363636"
            android:textSize="18sp" />
    </FrameLayout>



    <LinearLayout
        android:id="@+id/layout_devicename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_header"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设备名:"
            android:textColor="#383044"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/device_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的设备"
            android:textColor="#383044"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_device_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_devicename"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设备组:"
            android:textColor="#383044"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/device_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="A"
            android:textColor="#383044"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_device_imei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_device_group"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设备IMEI:"
            android:textColor="#383044"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/device_imei"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="844433333333333"
            android:textColor="#383044"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_device_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_device_imei"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="手机号:"
            android:textColor="#383044"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/bind_device_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="18922223333"
            android:textColor="#383044"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_device_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_device_phone"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设备型号:"
            android:textColor="#383044"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/bind_device_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="红米4A"
            android:textColor="#383044"
            android:textSize="14sp" />
    </LinearLayout>
    <Button
        android:id="@+id/unbind"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#ff6600"
        android:text="解绑设备"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</RelativeLayout>
